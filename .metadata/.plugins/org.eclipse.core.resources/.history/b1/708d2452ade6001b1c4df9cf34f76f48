package main;
import java.util.Scanner;

public class Converter2 {

	// Conversion factors are listed below: 
	double cupToTsp = 48.0; 
	double mileToKm = 1.60934;
	double usGallontoImperial = 0.832674; 
	
	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		// Here, we are creating an instance of the Scanner class; 
		// we are calling that instance 'scanner.'
		
		System.out.println("Hi, I bet you're here to convert some units of length.");
		System.out.println(" ");
		System.out.println("Please select the type of conversion you would like to perform:");
		System.out.println(" ");
		System.out.println("Enter 'distance conversion' if you have units of distance.");
		System.out.println("Enter 'volume conversion' if you have units of volume.");

		String input1 = scanner.nextLine();
		
		String conversionType = input1.toUpperCase();
		
		switch (conversionType) {
		case "DISTANCE CONVERSION" : 
			System.out.println("You've opted to perform a distance conversion.");
			break;
		case "VOLUME CONVERSION" :
			System.out.println("You've opted to perform a volume conversion.");
			break;
		default :
			System.out.println("You have not selected a valid option");
			System.out.println("Please re-run the program and follow the prompts as given.");
			return;
		}
		
	} //end of main

}
